    "test:restructure": "jest tests/payrollSystem.test.js tests/compensationBenefits.test.js tests/systemIntegration.test.js",
    "validate:migration": "node scripts/validate-migration.js",
    "verify:tables": "node scripts/verify-restructure-tables.js",
    "apply:restructure": "node scripts/apply-payroll-restructure.js",
    "test:payroll-cb-live": "node scripts/live-payroll-cb-test.js",
    "test:payroll-cb-quick": "node scripts/quick-payroll-cb-test.js",
    "test:intranet": "node scripts/run-intranet-tests.js",
    "setup:test-user": "node scripts/setup-test-user.js",
    "setup": "node scripts/setup.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
