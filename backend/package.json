{
  "name": "employee-management-system",
  "version": "1.0.0",
  "description": "Employee Management System (HRIS) - Internal intranet application for employee records, leave management, payroll, and benefits tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:intranet": "cross-env NODE_ENV=production node server.js",
    "start:intranet-win": "set NODE_ENV=production && node server.js",
    "dev": "nodemon server.js",
    "dev:intranet": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "seed": "node scripts/seed.js",
    "test:cors": "node scripts/test-cors.js",
    "kill:port": "npx kill-port 3000",
    "restart": "npm run kill:port && npm run dev",
    "health": "curl -s http://10.0.0.73:3000/health | node -p \"JSON.stringify(JSON.parse(require('fs').readFileSync(0)), null, 2)\"",
    "debug:cors": "echo Testing CORS... && npm run test:cors"
  },
  "keywords": [
    "employee-management",
    "hris",
    "payroll",
    "leave-management",
    "intranet"
  ],
  "author": "EMS Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@express-rate-limit/tsconfig": "^1.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
